`field_data_field_ol_base_print_no`.`entity_id` = `node`.`nid` AND
`field_revision_field_ol_print_no`.`entity_id` = `node`.`nid` AND
`field_data_field_ol_active_version`.`entity_id` = `node`.`nid`
ORDER BY `node`.`nid`
         ";

  db_query($sql);


}  //db

  // Now for the url alias survey
  $result = db_query('SELECT * FROM `nys_url_alias_audit`');
//  $result = db_query('SELECT * FROM `nys_url_alias_audit` WHERE LENGTH(`active_version`) > 0 LIMIT 10');
  foreach ($result as $record) {

/*
    print_r($record->nid); print "\r\n\r\n";
    print_r($record->session); print "\r\n\r\n";
    print_r($record->base_print_no); print "\r\n\r\n";
    print_r($record->print_no); print "\r\n\r\n";
    print_r($record->active_version); print "\r\n\r\n";
*/

